# 通知用Web hook
NOTIFY_WEBHOOK_URL=https://XXXXXXXXXXXXXXXXXXX

# 無通知検証（1で notify をstdoutに出して送らない）
NOTIFY_DRY_RUN=0

# HTTP（healthチェックの実行ループ間隔）
INTERVAL=60

# ディスク（使用率が85%超えたらfail）
DISK_PATH=/host
DISK_USE_PCT_MAX=85
DISK_CHECK_EVERY_SEC=600

# 証明書（残り14日以下でfail）
CERT_FULLCHAIN=/letsencrypt/live/yadag-studio.duckdns.org/fullchain.pem
CERT_DAYS_MIN=14
CERT_CHECK_EVERY_SEC=43200   # 12h

# バックアップ（整合性/世代の停止検知）
BACKUP_CHECK_EVERY_SEC=3600  # 1h

# バックアップ格納ディレクトリ（ホスト側を /host にマウントしている前提）
BACKUP_DIR=/host/backups/devops-studio

# 作成直後のバックアップをチェックするとレースでsha256不一致になることがあるためスキップする秒数
BACKUP_MIN_AGE_SEC=180

# バックアップが「古すぎる」判定（2日以上バックアップが無いならfail）
BACKUP_STALE_SEC=172800

# 日次サマリ通知（1で有効 / デフォルトOFF：通知を増やさない）
BACKUP_DAILY_SUMMARY=0