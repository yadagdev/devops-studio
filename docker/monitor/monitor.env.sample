DISCORD_WEBHOOK_URL=XXXXXXXXXXXXXXXXXXX

# 通知用Web hook (未来の移行用)
NOTIFY_WEBHOOK_URL= https://XXXXXXXXXXXXXXXXXXX

# HTTP
INTERVAL=60

# ディスク（使用率が85%超えたらfail）
DISK_PATH=/host
DISK_USE_PCT_MAX=85
DISK_CHECK_EVERY_SEC=300

# 証明書（残り14日以下でfail）
CERT_FULLCHAIN=/letsencrypt/live/yadag-studio.duckdns.org/fullchain.pem
CERT_DAYS_MIN=14
CERT_CHECK_EVERY_SEC=21600   # 6h

# バックアップ
# BACKUP_DIR=/host/backups/devops-studio
# BACKUP_MAX_AGE_SEC=93600     # 26h
BACKUP_CHECK_EVERY_SEC=3600  # 1h

# --- Backup check (race-safe) ---
# バックアップ格納ディレクトリ（ホスト側を /host にマウントしている前提）
BACKUP_DIR=/host/backups/devops-studio

# 作成直後のバックアップをチェックするとレースでsha256不一致になることがあるためスキップする秒数を設定
BACKUP_MIN_AGE_SEC=180

# バックアップが「古すぎる」判定（2日以上バックアップが無いならfail）
BACKUP_STALE_SEC=172800

# 日次サマリ通知（1で有効）
BACKUP_DAILY_SUMMARY=1